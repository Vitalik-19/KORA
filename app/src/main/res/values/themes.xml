<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KORA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextLogin">
        <item name="android:layout_width">215dp</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/ellipse_text_login</item>
    </style>

    <style name="ImageKora">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">373dp</item>
        <item name="android:layout_marginStart">-31dp</item>
        <item name="android:layout_marginEnd">-31dp</item>
        <item name="android:src">@drawable/ic_kora</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/main_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">37dp</item>
        <item name="android:layout_marginStart">37dp</item>
    </style>

    <style name="MainEditText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/main_edit_text</item>
        <item name="android:layout_marginEnd">37dp</item>
        <item name="android:layout_marginStart">37dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>